
<html>
  <body>
    <!-- ... -->
    <% flash.each do |type, msg| %>
    <div class="alert alert-danger" role="alert">
    <%= msg %>
    </div>
    <% end %>

    <%= form_tag url_for(action: 'create'), method: "gossip" do %>

      <%= label_tag 'Title' %>
